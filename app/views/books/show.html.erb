<div class='container'>
    <p id="notice"><%= notice %></p>
    <div class='row'>
        <div class='col-xs-3'>
            <%= render 'users/left', book: @book, user: @user %>
        </div>
        <div class='col-xs-9'>
          <h2>Book detail</h2>
          <table class='table'>
            <tr>
              <td>
                <%= link_to(user_path(@book.user.id)) do %>
                  <%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "no_image.jpg" %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user.id == current_user.id %>
                <td>
                  <%= link_to 'Edit', edit_book_path(@book), class: "btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(@book), method: :delete, class: "btn-sm btn-danger" %>
                </td>
              <% end %>              
            </tr>
          </table>
        </div>
    </div>
</div>
